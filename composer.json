{
  "name": "kleijnweb/php-api-descriptions",
  "type": "library",
  "authors": [
    {
      "name": "John Kleijn",
      "email": "john@kleijnweb.nl",
      "homepage": "http://www.kleijnweb.nl"
    }
  ],
  "license": "LGPL-3.0",
  "description": "A PHP7 library for loading api descriptions and using them to validate PSR7 messages.",
  "autoload": {
    "psr-4": {
      "KleijnWeb\\PhpApi\\Descriptions\\Tests\\": "tests",
      "KleijnWeb\\PhpApi\\Descriptions\\": "src"
    }
  },
  "keywords": [
    "openapi",
    "swagger"
  ],
  "require": {
    "php": "^7.0.0",
    "justinrainbow/json-schema": "^2.0",
    "psr/http-message": "1.0",
    "symfony/yaml": ">=2.8.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "mikey179/vfsStream": "^1.6",
    "doctrine/cache": "^1.6",
    "satooshi/php-coveralls": "^1.0"
  },
  "config": {
    "bin-dir": "bin"
  }
}
